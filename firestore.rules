rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own meal logs
    match /users/{userId}/meals/{mealId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own grocery lists
    match /users/{userId}/groceries/{groceryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own meal plans
    match /users/{userId}/mealPlans/{planId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own conversation history
    match /users/{userId}/conversations/{conversationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Indian food database - read-only for all authenticated users
    match /indianFoods/{foodId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write (via Firebase console)
    }
    
    // Nutrition recommendations - read-only for all authenticated users
    match /nutritionRecommendations/{recId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write
    }
    
    // Cooking tips and education content - read-only for all authenticated users
    match /cookingEducation/{tipId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write
    }
    
    // User analytics and usage tracking (anonymous)
    match /analytics/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Subscription and billing information
    match /subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}